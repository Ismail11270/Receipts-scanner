<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/dialog_edit_save_appbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <EditText
                android:id="@+id/newPurchaseShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Store name..."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHint="@color/grey_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <EditText
                android:id="@+id/newPurchaseShopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address..."
                android:minHeight="@dimen/spacing_xxlarge"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/grey_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <EditText
                android:id="@+id/newPurchaseComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description..."
                android:minHeight="@dimen/spacing_xxlarge"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/grey_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/newPurchaseDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:text="10.10.2010"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <ImageButton
                    android:id="@+id/editDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="@android:color/white"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />


                <TextView
                    android:id="@+id/newPurchaseTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:text="00:00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <ImageButton
                    android:id="@+id/editTimeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:backgroundTint="@android:color/white"
                    app:srcCompat="@android:drawable/ic_menu_manage" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>